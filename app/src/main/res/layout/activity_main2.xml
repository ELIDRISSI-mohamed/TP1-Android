<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity2" app:layout_constraintHorizontal_weight="1">

    <TextView
            android:text="TextView"
            android:layout_width="250dp"
            android:layout_height="30dp" android:id="@+id/textView"
            android:textSize="20sp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="32dp" app:layout_constraintEnd_toStartOf="@+id/buttonBack"
            android:layout_marginEnd="44dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="1.0" app:layout_constraintVertical_weight="1"
            app:layout_constrainedHeight="false"/>
    <Button
            android:text="Back"
            android:layout_width="95dp"
            android:layout_height="38dp" android:id="@+id/buttonBack"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="32dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="4dp"
            app:layout_constraintHorizontal_weight="0"/>
</androidx.constraintlayout.widget.ConstraintLayout>